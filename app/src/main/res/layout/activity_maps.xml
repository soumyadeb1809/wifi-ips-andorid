<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_above="@+id/btn_publish"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/back_white_rounded"
        android:elevation="2dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last published on 13:12, 31 March"
            android:textSize="12sp"
            android:id="@+id/txt_last_pub"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        android:background="@drawable/back_white_rounded">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/btn_ssid"
                android:layout_margin="4dp"
                android:src="@drawable/ic_hotspot"
             />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backrounded"
        android:layout_alignParentBottom="true"
        android:text="Publish Location"
        android:textAllCaps="false"
        android:id="@+id/btn_publish"
        android:textColor="@color/colorWhite"
        />


</RelativeLayout>